modules = ["nodejs-20", "web", "vue-node-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SurveyJS Creator Demo"

[[workflows.workflow]]
name = "SurveyJS Creator Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/survey-creator-vue/example && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33763
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "preview", "--prefix", "packages/survey-creator-vue/example"]
build = ["npm", "install", "--prefix", "packages/survey-creator-vue/example", "&&", "npm", "run", "build", "--prefix", "packages/survey-creator-vue/example"]
